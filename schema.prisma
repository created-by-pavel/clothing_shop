model User {
  id       Int      @id @default(autoincrement())
  name     String
  secondName  String
  password String
  email    String   @unique
  bDay      DateTime?
  orders   Order[]
}

model Order {
  id         Int        @id @default(autoincrement())
  totalPrice  Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user       User?      @relation(fields: [userId], references: [id])
  userId     Int
  products   Product[]  @relation("OrderProduct")
  @@map(name: "orders")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  price       Float
  images      String[]
  orders      Order[] @relation("OrderProduct")
}








